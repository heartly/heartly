{
  "name": "@heartly/cli",
  "version": "0.0.1",
  "description": "Heartly is tool for providing helpful documentation and config to code repositories. ðŸ’•",
  "main": "README.md",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "precommit": "pnpm run build && lint-staged",
    "test": "pnpm run lint && pnpm run build",
    "typecheck": "turbo run typecheck",
    "update": "codependence --update"
  },
  "repository": "git+https://github.com/heartly/heartly.git",
  "author": {
    "name": "Jeff Wainwright",
    "email": "yowainwright@gmail.com",
    "twitter": "@yowainwright"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/heartly/heartly/issues"
  },
  "homepage": "https://github.com/heartly/heartly#readme",
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-lerna-scopes": "17.7.0",
    "@commitlint/prompt": "17.7.1",
    "@types/node": "20.5.4",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "codependence": "^0.2.6",
    "commitizen": "4.3.0",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "path-exists-cli": "^2.0.0",
    "prettier": "3.0.1",
    "rimraf": "5.0.1",
    "ts-node": "^10.9.1",
    "tslib": "2.6.2",
    "tsutils": "^3.21.0",
    "turbo": "1.10.12",
    "typescript": "5.1.6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "root",
          "eslint-config",
          "eslint-config-typescript",
          "eslint-config-typescript-react",
          "markdownlint-config",
          "prettier-config"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "release",
          "revert"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@rushstack/eslint-patch": "^1.3.3"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "marked": "^4.0.10",
    "minimist": "^1.2.6"
  }
}
