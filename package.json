{
  "name": "@heartly/cli",
  "version": "0.0.1",
  "description": "Heartly is tool for providing helpful documentation and config to code repositories. ðŸ’•",
  "main": "README.md",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "precommit": "pnpm run build && lint-staged",
    "test": "pnpm run lint && pnpm run build",
    "typecheck": "turbo run typecheck",
    "update": "codependence --update"
  },
  "repository": "git+https://github.com/heartly/heartly.git",
  "author": {
    "name": "Jeff Wainwright",
    "email": "yowainwright@gmail.com",
    "twitter": "@yowainwright"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/heartly/heartly/issues"
  },
  "homepage": "https://github.com/heartly/heartly#readme",
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-lerna-scopes": "17.6.6",
    "@commitlint/prompt": "17.6.5",
    "@types/node": "20.3.0",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.60.0",
    "codependence": "^0.2.6",
    "commitizen": "4.3.0",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "path-exists-cli": "^2.0.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "ts-node": "^10.9.1",
    "tslib": "2.5.3",
    "tsutils": "^3.21.0",
    "turbo": "1.10.5",
    "typescript": "5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "root",
          "eslint-config",
          "eslint-config-typescript",
          "eslint-config-typescript-react",
          "markdownlint-config",
          "prettier-config"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "release",
          "revert"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@rushstack/eslint-patch": "^1.3.2"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "marked": "^4.0.10",
    "minimist": "^1.2.6"
  }
}
